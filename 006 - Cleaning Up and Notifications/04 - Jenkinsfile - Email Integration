pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	parameters{
		text(name: 'PESSOA', defaultValue: 'Rodolfo')
	}
    stages {
        stage('build') {
            steps {
                sh "echo 'fiz coisas' > text.txt"
		emailext body: 'Test Message',
		attachmentsPattern: 'text.txt',
    		subject: 'Test Subject',
    		to: 'rodolfo.martins@celfocus.com'
            }
        }
	stage('htmlEmail') {
            steps {
	    	sh """
	    	sed 's#Manifesto.html${PESSOA}#g' 006 - Cleaning Up and Notifications/Manifesto.html"
            	"""
		def htm=readFile("006 - Cleaning Up and Notifications/Manifesto.html")
		emailext body: htm,
    		subject: 'Test Subject',
    		to: 'rodolfo.martins@celfocus.com'
            }
        }
    }
}
