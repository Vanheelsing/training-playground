pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('cleanup') {
            steps {
	    	sh "ls -lta"
	    	cleanWs()
		sh "ls -lta"
            }
        }
        stage('build') {
            steps {
                sh "date > data.txt"
		sh "ls -lta"
            }
        }
    }
}
