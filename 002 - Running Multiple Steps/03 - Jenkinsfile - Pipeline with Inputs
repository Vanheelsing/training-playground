pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    parameters {
        	string(NAME: 'NAME', defaultValue: 'Eu', description: 'Who should I say hello to?')
		string(AGE: 'AGE', defaultValue: '22', description: 'Who should I say hello to?')
	}
    stages {
        stage('build') {
            steps {
                echo "$NAME"
                echo "$AGE"
            }
        }
    }
}
